<%= simple_form_for [@algorithm, @version], html: { class: 'form-horizontal' } do |f| %>

  <%= f.input :name %>

  <% if @version.id.present? %>
    <%= f.input :top_left_question_id, collection: @version.components.includes(:node), label_method: :node_label, prompt: t('select')  %>
    <%= f.input :first_top_right_question_id, collection: @version.components.includes(:node), label_method: :node_label, prompt: t('select')  %>
    <%= f.input :second_top_right_question_id, collection: @version.components.includes(:node), label_method: :node_label, prompt: t('select')  %>
  <% end %>

  <%= f.input :is_arm_control, as: :boolean, label: t('versions.edit.is_arm_control_label') %>

  <%= f.association :languages, collection: Language.all, label_method: :name, as: :check_boxes, label: t("activerecord.attributes.version.languages") %>

  <%= f.input :description_en, as: :text %>

  <%= link_to t('cancel'), :back, class: 'btn btn-danger my-4 float-left' %>
  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
