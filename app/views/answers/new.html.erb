<h1><%= t('.title', name: @question.label) %></h1>

<div class="row justify-content-center">
  <%= simple_form_for [@algorithm, @question], html: { class: 'form-horizontal' }, url: answers_algorithm_question_url(@algorithm, @question), method: :put, wrapper: :input_group do |f| %>
    <% if @question.answer_type.display == 'Input' %>
      <%= f.simple_fields_for :answers do |ff| %>
        <%= render 'answers/form_input', f: ff %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association "<button class='btn btn-outline-success'>#{t('add')}</button".html_safe, f, :answers, partial: 'answers/form_input' %>
      </div>
    <% else %>
      <%= f.simple_fields_for :answers do |ff| %>
        <%= render 'answers/form_multiple', f: ff %>
      <% end %>
      <div class='links'>
        <%= link_to_add_association "<button class='btn btn-outline-success'>#{t('add')}</button".html_safe, f, :answers, partial: 'answers/form_multiple' %>
      </div>
    <% end %>

    <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
  <% end %>
</div>
