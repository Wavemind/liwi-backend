<div class="row my-1">
  <div class="col align-self-center breadcrumbs"><%= render_breadcrumbs %></div>
  <div class="col align-self-center text-center text-uppercase font-weight-light"><%= @predefined_syndrome.label %></div>
  <div class="col align-self-center text-right">
    <%= link_to(I18n.t('validate'), validate_predefined_syndrome_url(params[:id], panel: 'predefined_syndromes'), class: 'btn btn-warning mr-2') %>
    <%= link_to(I18n.t('save'), algorithm_url(@predefined_syndrome.algorithm, panel: 'predefined_syndromes'), class: 'btn btn-warning mr-2') %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <p class="mx-0 my-0 metadata" data-type="<%= @predefined_syndrome.class.name %>" data-id="<%= @predefined_syndrome.id %>"></p>
    <%= react_component('Provider', {
      render: 'Diagram',
      context: {
        instanceable: @predefined_syndrome.as_json(include: :category),
        instanceable_type: @predefined_syndrome.class.name,
        questions: @predefined_syndrome.questions_json,
        availableNodes: @predefined_syndrome.available_nodes_json,
        type: 'PredefinedSyndrome'
      }
    }) %>
  </div>
  <button type="button" class="btn btn-sm btn-info help" data-toggle="popover" data-placement="top" data-html="true" data-content="<%= render 'helps/diagram' %>">
    <i class="material-icons">
      help_outline
    </i>
  </button>
</div>
