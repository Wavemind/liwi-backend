<h1><%= t('.title') %></h1>

<div class="row justify-content-center">

  <%= simple_form_for @device, html: { class: 'form-horizontal' } do |f| %>

    <%= f.input :mac_address %>
    <%= f.association :group, collection: Group.all, label_method: :name, prompt: t('prompt') %>

    <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
  <% end %>

</div>
