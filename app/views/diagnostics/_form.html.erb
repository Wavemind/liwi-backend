<%= simple_form_for [@algorithm, @version, @diagnostic], html: { class: 'form-horizontal' }, wrapper: :input_group do |f| %>

  <%= f.input :reference, prepend: (f.object.persisted? ? false : t('diagnostics.reference')) %>
  <%= f.input :label_en %>
  <%= f.association :node, collection: @algorithm.questions.where(type: 'Questions::ChiefComplaint'), label_method: :reference_label, prompt: t('select')  %>

  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
