<%= simple_form_for @algorithm, html: { class: 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= f.input :age_limit, as: :numeric %>
  <%= f.input :age_limit_message, as: :text, label: t('activerecord.attributes.algorithm.age_limit_message_html'), input_html: {value: f.object.age_limit_message || t('algorithms.age_limit_message_default')} %>
  <%= f.input :minimum_age, as: :numeric, label: t('activerecord.attributes.algorithm.minimum_age') %>
  <%= f.input :consent_management, as: :boolean, label: t('activerecord.attributes.algorithm.consent_management') %>
  <%= f.association :study, collection: Study.all, label_method: :label, prompt: t('select')  %>
  <%= f.input :description, as: :text %>
  <div class="form-group">
    <label for="emergency_content" class="form-label"><%= t('algorithms.new.emergency') %></label>
    <%= f.text_area :emergency_content, class: 'tinymce-emergency', rows: 20, cols: 120 %>
  </div>

  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
