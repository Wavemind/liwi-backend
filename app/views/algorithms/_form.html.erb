<%= simple_form_for @algorithm, html: { class: 'form-horizontal' } do |f| %>

  <%= f.input :name %>
  <%= f.input :age_limit, as: :numeric %>
  <%= f.input :age_limit_message, as: :text, input_html: {value: f.object.age_limit_message || t('algorithms.age_limit_message_default')} %>
  <%= f.input :description, as: :text %>

  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
