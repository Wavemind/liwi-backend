<div class="row h-100 w-100 login-background">
  <div class="col-3 mx-auto my-auto login-content">

    <div class="row my-5">
      <%= image_tag('logo_medal_creator.png', class: 'mx-auto', height: '150') %>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: 'email' } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: 'current-password' } %>

      </div>

      <div class="form-actions">
        <%= f.button :submit, t('.login'), class: 'btn btn-succes btn-block btn-primary-light' %>
      </div>
    <% end %>


    <div class="devise-links">
      <%= render 'devise/shared/links' %>
    </div>

  </div>
</div>
