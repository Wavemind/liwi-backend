<div class="row h-100 w-100 login-background">
  <div class="col-3 mx-auto my-auto login-content">

    <div class="row my-5">
      <h2><%= t('.title') %></h2>
    </div>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), method: :post, html: { autocomplete: "off" })  do |f| %>
      <%= f.input :otp_attempt, autofocus: true, label: t('.code') %>
      <div class="actions">
        <%= f.submit t('.login'), class: 'btn btn-succes btn-block btn-primary-light' %>
      </div>
    <% end %>

    <div class="devise-links">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
