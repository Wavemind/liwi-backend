<div class="nested-fields">
  <div class="row">
    <div class="col align-self-center"><%= f.input :label, label: false %></div>
    <div class="col align-self-center"><%= f.input :api_key, label: false %></div>
    <div class="col align-self-center"><%= f.association :question, collection: @version.components, value_method: :node_id, label_method: :display_node_label_id, label: false %></div>
    <div class="col align-self-center">
      <%= link_to_remove_association "<button class='btn btn-outline-danger'>#{t('remove')}</button>".html_safe, f %>
    </div>
  </div>
</div>
