<div class="nested-fields">
  <div class="row">
    <div class="col align-self-center"><%= f.input :first_name %></div>
    <div class="col align-self-center"><%= f.input :last_name %></div>
    <div class="col align-self-center"><%= f.input :role, collection: MedicalStaff.roles.map { |k, v| [t("medical_staffs.roles.#{k}"), k] }, prompt: t('select') %></div>
    <div class="col align-self-center">
      <%= link_to_remove_association "<button class='btn btn-outline-danger'>#{t('remove')}</button>".html_safe, f %>
    </div>
  </div>
</div>
