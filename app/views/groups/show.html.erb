<h1><%= t('.title', name: @group.name) %></h1>

<div class="row">
  <div class="col">
    <%= simple_form_for @user, url: group_add_user_url(@group), method: :post do |f| %>
      <div class="row">
        <div class="col">
          <%= f.input :id, collection: User.where.not(id: GroupUser.where(group_id: @group.id).pluck(:user_id)), label_method: :full_name, label: false , prompt: t('prompt')%>
        </div>
        <div class="col">
          <%= f.submit t('add'), class: 'btn btn-primary' %>
        </div>
      </div>
    <% end %>
  </div>
</div>


<table class="table table-condensed table-hover" id="users-datatable" data-source="<%= users_url(format: :json, from: 'group', id: params[:id]) %>">
  <thead>
    <tr>
      <th><%= t('users.index.columns.id') %></th>
      <th><%= t('users.index.columns.first_name') %></th>
      <th><%= t('users.index.columns.last_name') %></th>
      <th><%= t('users.index.columns.mail') %></th>
      <th><%= t('users.index.columns.last_connection') %></th>
      <th><%= t('users.index.columns.status') %></th>
      <th><%= t('users.index.columns.actions') %></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
