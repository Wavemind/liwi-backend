<h1><%= t('.title') %></h1>
<%= link_to new_group_url do %>
  <button type="button" class="btn btn-outline-secondary"><%= t('add') %></button>
<% end %>

<table class="table table-condensed table-hover" id="groups-datatable" data-source="<%= groups_url(format: :json) %>">
  <thead>
    <tr>
      <th><%= t('.columns.name') %></th>
      <th><%= t('.columns.nb_people') %></th>
      <th><%= t('.columns.actions') %></th>
    </tr>
  </thead>
  <tbody></tbody>
</table>
