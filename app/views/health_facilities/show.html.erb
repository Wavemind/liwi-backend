<h1>
  <%= t('.title', name: @health_facility.name) %> - <small><%= t("health_facilities.architectures.#{@health_facility.architecture}") %></small>
  <%= link_to(I18n.t('edit'), edit_health_facility_url(@health_facility), class: 'btn btn-outline-success ml-3') %>
</h1>

<ul class="nav nav-tabs mt-3" id="health_facility-tabs" role="tablist">
  <li class="nav-item">
    <%= link_to  t('.second_title'), health_facility_access_url(@health_facility), id: 'nav-link-accesses', class: "nav-link active", remote: true %>
  </li>
  <li class="nav-item">
    <%= link_to  t('.devices'), health_facility_device_url(@health_facility), id: 'nav-link-devices', class: "nav-link", remote: true %>
  </li>
  <li class="nav-item">
    <%= link_to  t('.medical_staff'), health_facility_medical_staff_url(@health_facility), id: 'nav-link-medical_staff', class: "nav-link", remote: true %>
  </li>
  <li class="nav-item">
    <%= link_to  t('.generate_stickers'), health_facility_generate_stickers_view_url(@health_facility), id: 'nav-link-generate_stickers', class: "nav-link", remote: true %>
  </li>
</ul>

<div class="tab-content mt-4 ml-4" id="health_facility-table">
  <div id="health_facility-index-content">
    <%= render 'health_facilities/accesses' %>
  </div>
</div>
