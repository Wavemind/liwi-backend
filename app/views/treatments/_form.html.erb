<%= simple_form_for [@algorithm, @treatment], html: { class: 'form-horizontal' }, wrapper: :input_group do |f| %>

  <%= f.input :reference, prepend: (f.object.persisted? ? false : "#{t('treatments.reference')}_"), disabled: f.object.persisted? %>
  <%= f.input :label %>
  <%= f.input :description, as: :text %>

  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
