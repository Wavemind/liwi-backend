<%= simple_form_for [@algorithm, @version, @diagnosis], html: { class: 'form-horizontal' }, wrapper: :input_group do |f| %>

  <%= f.input :label_en %>
  <%= f.association :node, collection: @algorithm.questions.where(type: 'Questions::ComplaintCategory'), label_method: :reference_label, prompt: t('select')  %>
  <%= f.input :cut_off_start %>
  <%= f.input :cut_off_end %>
  <%= f.input :cut_off_value_type, collection: %w(months days), selected: @diagnosis.id.present? ? 'days' : 'months', input_html: {value: @diagnosis.id.present? ? 'days' : 'months'}, include_blank: false, disabled: @diagnosis.id.present? %>


  <%= link_to t('cancel'), :back, class: 'btn btn-danger my-4 float-left' %>
  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
