<h1><%= t('.title', name: @diagnosis.label) %> <%= link_to(I18n.t('open_diagram'), diagram_algorithm_version_diagnosis_url(params[:algorithm_id], params[:version_id], params[:id]), class: 'btn btn-dark') %></h1>

<ul class="nav nav-tabs" id="myTab" role="tablist">
  <li class="nav-item">
    <a class="nav-link <%= 'active' if params[:panel].blank? || params[:panel] == 'final_diagnoses'%>" id="final_diagnoses-tab" data-toggle="tab" href="#final_diagnoses" role="tab" aria-controls="final_diagnoses" aria-selected="false"><%= t('.subtitle_final_diagnoses')  %> </a>
  </li>
</ul>


<div class="tab-content mt-4 ml-4" id="diagnosis-table">
    <div class="tab-pane fade <%= 'show active' if params[:panel].blank? || params[:panel] == 'final_diagnoses'%>" id="final_diagnoses" role="tabpanel" aria-labelledby="final_diagnoses-tab">

    <h3 class="mt-5"><%= t('.subtitle_final_diagnoses') %></h3>
    <%= link_to new_algorithm_version_diagnosis_final_diagnosis_url(@algorithm, @version, @diagnosis) do %>
      <button type="button" class="btn btn-outline-primary"><%= t('add') %></button>
    <% end %>

    <%= render 'final_diagnoses/table' %>
  </div>
</div>

