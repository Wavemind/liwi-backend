<h1>Details of <%= @user.full_name %></h1>

<p><%= @user.email %></p>
<p>Role <b><%= @user.role.name %></b></p>
<p>Last account connection <b><%= datetime_format(@user.last_sign_in_at) %></b></p>
<h2>Groups</h2>
<% @user.groups.each do |group|%>
  <p><%= group.name %></p>
<% end %>

<h2>Activity</h2>
<% @user.activities.each do |activity| %>
  <p><%= "#{datetime_format(activity.created_at)} - #{activity.device.brand}/#{activity.device.model}"%></p>
<% end %>
