<h1><%= t('.title', name: @user.full_name) %></h1>

<p><%= @user.email %></p>
<p><%= t('.role') %><b><%= @user.role.name %></b></p>
<p><%= t('.last_account_connection') %><b><%= datetime_format(@user.last_sign_in_at) %></b></p>
<h2><%= t('.groups') %></h2>
<% @user.groups.each do |group|%>
  <p><%= group.name %></p>
<% end %>

<h2>Activity</h2>
<% @user.activities.includes(:device).each do |activity| %>
  <p><%= "#{datetime_format(activity.created_at)} - #{activity.device.brand}/#{activity.device.model}"%></p>
<% end %>
