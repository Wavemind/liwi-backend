<%= f.input :first_name %>
<%= f.input :last_name %>
<%= f.input :email %>
<%= f.input :deactivated, as: :boolean %>

<%= f.input :role, collection: User.roles.map { |k, v| [t("user.role.#{k}"), k] }, label: t("activerecord.attributes.user.role_html"), prompt: t('select') %>

<%= f.association :roles, collection: Role.all, label_method: :name, as: :check_boxes, label: t("activerecord.attributes.user.roles_html") %>

<%= link_to t('cancel'), users_url, class: 'btn btn-danger my-4 float-left' %>
<%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
