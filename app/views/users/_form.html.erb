<%= simple_form_for @user, html: { class: 'form-horizontal' } do |f| %>

  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :deactivated, as: :boolean %>

  <%= f.association :roles, collection: Role.all, label_method: :name, as: :check_boxes %>

  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
