<%= simple_form_for @study, html: { class: 'form-horizontal' } do |f| %>
  <%= f.input :label %>
  <div class="form-group">
    <label for="emergency_content" class="form-label"><%= t('studies.description') %></label>
    <div class="tinymce-wrapper">
      <%= f.text_area :description, class: 'tinymce-description' %>
    </div>
  </div>
  <%= f.submit t('save'), class: 'btn btn-primary my-4 float-right' %>
<% end %>
